                        }
                    }
                }
            }
        },
        "/periodo/{periodo}/oferecimentos/{disciplina}/turma/{turma}": {
            "get": {
                "parameters": [
                    {
                        "name": "periodo",
                        "in": "path",
                        "type": "string",
                        "description": "Periodo do oferecimento",
                        "required": true
                    },
                    {
                        "name": "disciplina",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla da disciplina",
                        "required": true
                    },
                    {
                        "name": "turma",
                        "in": "path",
                        "type": "string",
                        "description": "Letra da turma",
                        "required": true
                    }
