                "parameters": [
                    {
                        "name": "periodo",
                        "in": "path",
                        "type": "string",
                        "description": "Periodo do oferecimento",
                        "required": true
                    },
                    {
                        "name": "disciplina",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla da disciplina",
                        "required": true
                    },
                    {
                        "name": "turma",
                        "in": "path",
                        "type": "string",
                        "description": "Letra da turma",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna a lista de matriculados em uma turma",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Aluno"
                            }
                        }
                    }
                }
            }
        },
        "/periodo/{periodo}/oferecimentos/{disciplina}/turma/{turma}/matriculados/{ra}": {
            "get": {
                "parameters": [
                    {
                        "name": "periodo",
                        "in": "path",
                        "type": "string",
                        "description": "Periodo do oferecimento",
                        "required": true
                    },
                    {
                        "name": "disciplina",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla da disciplina",
                        "required": true
                    },
                    {
                        "name": "turma",
                        "in": "path",
                        "type": "string",
                        "description": "Letra da turma",
                        "required": true
                    },
                    {
                        "name": "ra",
                        "in": "path",
                        "type": "string",
                        "description": "Numero do RA do aluno",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna a lista de matriculados em uma turma",
                        "schema": {
                            "$ref": "#/definitions/Aluno"
                        }
                    }
                }
            }
        }
