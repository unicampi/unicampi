            "properties": {
                "ra": {
                    "type": "string"
                },
                "nome": {
                    "type": "string"
                },
                "typo": {
                    "type": "string"
                },
                "curso": {
                    "type": "string"
                },
                "modalidade": {
                    "type": "string"
                }
            }
