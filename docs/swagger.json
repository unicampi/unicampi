{
    "swagger": "2.0",
    "info": {
        "version": "0.0.5",
        "title": "unicampi",
        "description": "Uma API para os dados públicos da Unicamp."
    },
    "host": "gabsurita.pythonanywhere.com",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/": {
            "get": {
                "responses": {
                    "200": {
                        "description": "Lista algumas propriedades do servidor",
                        "schema": {
                            "$ref": "#/definitions/Server_info"
                        }
                    }
                }
            }
        },
        "/institutos": {
            "get": {
                "responses": {
                    "200": {
                        "description": "Lista todos os institutos",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Instituto"
                            }
                        }
                    }
                }
            }
        },
        "/institutos/{instituto}": {
            "get": {
                "parameters": [
                    {
                        "name": "instituto",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla do instituto",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna os dados de um instituto.",
                        "schema": {
                            "$ref": "#/definitions/Instituto"
                        }
                    }
                }
            }
        },
        "/institutos/{instituto}/disciplinas": {
            "get": {
                "parameters": [
                    {
                        "name": "instituto",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla do instituto",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de todas as disciplinas de um instituto",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/DisciplinaResumida"
                            }
                        }
                    }
                }
            }
        },
        "/disciplinas/{disciplina}": {
            "get": {
                "parameters": [
                    {
                        "name": "disciplina",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla da disciplina",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna os dados de uma disciplina",
                        "schema": {
                            "$ref": "#/definitions/Disciplina"
                        }
                    }
                }
            }
        },
        "/periodo/{periodo}/oferecimentos/{disciplina}": {
            "get": {
                "parameters": [
                    {
                        "name": "periodo",
                        "in": "path",
                        "type": "string",
                        "description": "Periodo do oferecimento",
                        "required": true
                    },
                    {
                        "name": "disciplina",
                        "in": "path",
                        "type": "string",
                        "description": "Sigla da disciplina",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna a lista de de oferecimentos para uma disciplina",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/OferecimentoResumido"
